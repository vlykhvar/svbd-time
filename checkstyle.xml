<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>

    <property name="severity" value="error"/>

    <property name="fileExtensions" value="java, xml"/>
    <!-- Configure the coding style rules here -->

    <!-- Enforce 4-space indentation -->
    <module name="Indentation">
        <property name="basicOffset" value="4"/>
    </module>

    <!-- Ensure no line exceeds 120 characters -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- Check for unused imports -->
    <module name="UnusedImports"/>

    <!-- Ensure there are no trailing spaces -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Line has trailing whitespace."/>
    </module>

    <!-- Check for Javadoc comments on classes, methods, and fields -->
    <module name="JavadocType"/>
    <module name="JavadocMethod"/>
    <module name="JavadocVariable"/>

    <!-- Require consistent Javadoc formatting -->
    <module name="JavadocStyle"/>

    <!-- Enforce naming conventions -->
    <module name="NameConvention"/>

    <!-- Require a single blank line before '}' -->
    <module name="EmptyLineSeparator">
        <property name="allowNoEmptyLineBetweenFields" value="true"/>
        <property name="allowNoEmptyLineBetweenSingleLineFields" value="true"/>
    </module>


    <!-- Avoid wildcard (*) imports -->
    <module name="AvoidStarImport"/>

    <!-- Add more rules as needed -->
</module>